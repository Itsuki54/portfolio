---

interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
	langs: {
		name: string;
		img: string;
	}[];
}

const { href, title, body, img, langs } = Astro.props;
---

<div class="list-none flex flex-col p-px bg-card-bg bg-none bg-[length:400%] rounded-[7px] bg-[position:100%] shadow-[inset_0_0_0_1px_rgba(255,255,255,0.1)] hover:bg-[position:0%] focus-within:bg-[position:0%] hover:bg-accent-gradient focus-within:bg-accent-gradient">
	<a href={href} class="flex flex-col justify-between h-full no-underline leading-[1.4] p-[calc(1.5rem-1px)] rounded-lg text-white bg-card-bg opacity-80">
		<h2 class="flex justify-center items-center text-xl font-bold text-white transition-colors duration-[600ms] ease-[cubic-bezier(0.22,1,0.36,1)]">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="mt-2 mb-0">
			{body}
		</p>
		<div class="flex flex-wrap gap-[5px] py-2">
			{langs.map((lang) => (
				<img src={lang.img} alt={lang.name} />
			))}
		</div>
	</a>
</div>