import Layout from '../layouts/Layout.astro';
---

<Layout title="Itsuki54's Contact" description='ontact page for Itsuki54. Reach out for any inquiries or comments.'>
  <div class="container">
    <div class="contact-info">
      <h1>Contact Me</h1>
      <p>If you have any questions or comments, feel free to reach out!</p>
      <div class="info">
        <h2>Email:</h2>
        <p><a href="mailto:5shi.icyu@gmail.com">5shi.icyu@gmail.com</a></p>
      </div>
      <div class="info">
        <h2>Social Media:</h2>
        <p>
          <a href="https://github.com/Itsuki54">GitHub</a>
