<style>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 4rem;
  }
  .contact-info {
    color: white;
    text-align: center;
    margin-bottom: 2rem;
  }
  .contact-info h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .contact-info h2 {
    font-size: 2rem;
    margin: 1rem 0;
  }
  .contact-info p {
    font-size: 1.5rem;
    margin: 0.5rem 0;
  }
  .info {
    margin-bottom: 1.5rem;
  }
</style>
