---
import Layout from '../layouts/Layout.astro';
import { history } from '../data/history';

---

<Layout title="About">
  <div class="container">
  <div class="icon">
    <img src="/icon.jpeg" alt="Logo"
      class="icon-image"
    />
    <div class="description">
      <h1>Itsuki54</h1>
      <h2>
        輿石一輝
      </h2>
      <p>
        東京都立産業技術高等専門学校<br class="hidden-on-mobile">
        情報システム工学コース 4年
      </p>
      <div class="sns">
        <a href="https://github.com/Itsuki54">
          <img src="/github-mark-white.svg" alt="GitHub" />
        </a>
        <a href="https://twitter.com/Itsuki54">
          <img src="/logo.svg" alt="Twitter" />
        </a>
      </div>
    </div>
  </div>
  <div class="history">
    <h2>History</h2>
    <ul class="timeline">
      {
        history.map((item) => (
          <li class="event">
            <div class="timeline-content">
              <time>{item.time}</time>
              <p>{item.body}</p>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
  </div>
</Layout>

<style>
  .container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    box-sizing: border-box;
    padding: 4rem;
  }
  .icon {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin: auto;
    gap: 12rem;
    max-width: calc(100% - 2rem);
  }
  .icon-image{
    width: 500;
    height: 500;
    border-radius: 50%;
  }
  .container h1 {
    color: white;
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .container h2 {
    color: white;
    font-size: 3rem;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .container p {
    color: white;
    font-size: 2rem;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .description {
    display: flex;
    flex-direction: column;
    text-align: left;
    align-items: start;
    justify-content: start;
    margin: auto;
  }
  .description img {
    width: 80px;
    height: 80px;
  }
  .hidden-on-mobile {
    display: none;
  }
  @media (min-width: 768px) {
    .hidden-on-mobile {
      display: block;
    }
  }
  .history {
    margin-top: 2rem;
    text-align: left;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }
  .history h2 {
    color: white;
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
  }
  .timeline {
    position: relative;
    padding: 0;
    list-style: none;
  }
  .timeline:before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    left: 200px;
    width: 2px;
    background: #fff;
  }
  .event {
    position: relative;
    margin-bottom: 20px;
    list-style-type: none;
  }
  .event::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 196px;
    width: 10px;
    height: 10px;
    background: #fff;
    border-radius: 50%;
    transform: translateY(-50%);
  }
  .timeline-content {
    margin-left: 220px;
    padding: 10px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 5px;
  }
  .branch .timeline-content {
    margin-left: 240px;
  }
  .timeline-content time {
    display: block;
    font-weight: bold;
    margin-bottom: 5px;
    color: #ddd;
  }
  .timeline-content p {
    margin: 0;
    color: white;
    font-size: 1rem;
  }
</style>